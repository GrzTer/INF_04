<Window x:Class="desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktop"
        mc:Ignorable="d"
        Title="Nadaj Przesyłkę: PESEL: Grzegorz Tereszkiewicz" Height="370" Width="650">
    <!-- 22min - frontend -->
    <Grid>
        <GroupBox Header="Rodzaj przesyłki" Margin="32,28,395,160">
            <StackPanel Height="90" Margin="10,0,0,0">
                <RadioButton x:Name="pocztowkaRadio" Content="Pocztówka" Margin="0,0,0,15" IsChecked="True"/>
                <RadioButton x:Name="listRadio" Content="List" Margin="0,0,0,15"/>
                <RadioButton x:Name="paczkaRadio" Content="Paczka" Margin="0,0,0,15"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Dane adresowe" Margin="357,28,32,92">
            <StackPanel Height="162">
                <Label Content="Ulica z numerem" Width="220" Height="23"/>
                <TextBox TextWrapping="Wrap" x:Name="ulicaNrTextBox" Width="220" Margin="0,0,0,10"/>
                <Label Content="Kod pocztowy" Width="220" Height="23"/>
                <TextBox TextWrapping="Wrap" x:Name="kodPocztowyTextBox" Width="220" Margin="0,0,0,10"/>
                <Label Content="Miasto" Width="220" Height="23"/>
                <TextBox TextWrapping="Wrap" x:Name="miastoTextBox" Width="220" Margin="0,0,0,10"/>
            </StackPanel>
        </GroupBox>
        <Image HorizontalAlignment="Left" x:Name="przesylkaImage" Height="60" Margin="32,213,0,0" VerticalAlignment="Top" Width="89" Source="/img/pocztowka.png" Stretch="Fill"/>
        <Label Content="Cena:" x:Name="cenaLabel" HorizontalAlignment="Left" Height="34" Margin="144,214,0,0" VerticalAlignment="Top" Width="111" FontWeight="Bold" FontSize="20"/>
        <Button Content="Sprawdź Cenę" Height="29" Margin="32,179,395,0" VerticalAlignment="Top" Click="SprawdzCeneButton"/>
        <Button Content="Zatwierdź" HorizontalAlignment="Center" Height="31" Margin="0,289,0,0" VerticalAlignment="Top" Width="586" Click="ZatwierdzButton"/>

    </Grid>
</Window>
