<Window x:Class="Zadanie_dla_chętnych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie_dla_chętnych"
        mc:Ignorable="d"
        Title="Zadanie_dla_chętnych" Height="450" Width="800"
        Background="#F0FFFF">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="Black" BorderThickness="1" Padding="20" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ciśnienie (hPa):" Foreground="#808080" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <TextBox Name="txtCisnienie" Width="100" Margin="0,0,20,0"/>

                <Button Content="Dodaj pomiar" Background="#1E90FF" Foreground="White" Width="120" Height="30" Click="Button_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="Black" BorderThickness="1" Margin="0,0,10,0">
                <ListView Name="lvPomiary">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Czas" Width="100" DisplayMemberBinding="{Binding Czas}"/>
                            <GridViewColumn Header="Ciśnienie (hPa)" Width="150" DisplayMemberBinding="{Binding Wartosc}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <Border Grid.Column="1" Background="White" BorderBrush="Black" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Trend ciśnienia" Foreground="#808080" FontSize="20" Margin="0,0,0,10"/>
                    <TextBlock Name="txtTrend" Text="Brak danych" Foreground="#808080"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>